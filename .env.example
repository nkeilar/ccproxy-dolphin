# Backend configuration
BACKEND=grok  # Options: grok, anthropic

# API Keys
XAI_API_KEY=your-xai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here  # Only needed for anthropic backend

# System Prompt Customization
USE_CUSTOM_PROMPT=true
CUSTOM_PROMPT_FILE=system_prompt_template_unrestricted.txt
PROMPT_CONFIG_FILE=prompt_config.json

# Logging
ENABLE_FULL_LOGGING=true
LOG_DIR=logs/requests

# For Claude Code or other clients
# export ANTHROPIC_BASE_URL=http://localhost:8000
# export ANTHROPIC_API_KEY=dummy-key